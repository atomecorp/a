<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>UISupportsDocumentBrowser</key>
    <true/>
    <key>UIApplicationSupportsLocalStorage</key>
    <true/>
    
    <!-- FICHIERS ATOME - Type personnalisé -->
    <key>UTExportedTypeDeclarations</key>
    <array>
        <dict>
            <key>UTTypeIdentifier</key>
            <string>one.atome.app.atome-project</string>
            <key>UTTypeDescription</key>
            <string>Atome Project File</string>
            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>atome</string>
                </array>
                <key>public.mime-type</key>
                <array>
                    <string>application/json</string>
                </array>
            </dict>
            <key>UTTypeConformsTo</key>
            <array>
                <string>public.json</string>
                <string>public.data</string>
                <string>public.content</string>
            </array>
        </dict>
    </array>
    
    <!-- PERMISSIONS D'ACCÈS AUX FICHIERS -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Atome peut accéder aux photos pour charger des samples audio</string>
    <key>NSDocumentsFolderUsageDescription</key>
    <string>Atome a besoin d'accéder aux documents pour sauvegarder et charger vos projets</string>
    <key>NSFileProviderDomainUsageDescription</key>
    <string>Atome utilise le système de fichiers iOS pour gérer vos projets</string>
    
    <!-- TYPES DE DOCUMENTS SUPPORTÉS -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>atome</string>
            </array>
            <key>CFBundleTypeIconFiles</key>
            <array/>
            <key>CFBundleTypeName</key>
            <string>Atome Project</string>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
            <key>LSTypeIsPackage</key>
            <false/>
        </dict>
        <dict>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>json</string>
            </array>
            <key>CFBundleTypeName</key>
            <string>JSON Document</string>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
        </dict>
    </array>
    
    <key>LSHasLocalizedDisplayName</key>
    <true/>
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                    <key>UISceneStoryboardFile</key>
                </dict>
            </array>
        </dict>
    </dict>
</dict>
</plist>
