{
  "name": "squirrel-framework",
  "version": "1.0.0",
  "type": "module",
  "description": "üêøÔ∏è Framework hybride moderne avec Vanilla JS + Tauri + Axum",
  "main": "dist/squirrel.js",
  "module": "dist/squirrel.esm.js",
  "browser": "dist/squirrel.umd.js",
  "unpkg": "dist/squirrel.min.js",
  "jsdelivr": "dist/squirrel.min.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/squirrel.esm.js",
      "require": "./dist/squirrel.cjs.js",
      "browser": "./dist/squirrel.umd.js"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist/",
    "src/squirrel/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "framework",
    "web-components",
    "vanilla-js",
    "ui-framework",
    "frontend",
    "squirrel"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/your-org/squirrel-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/squirrel-framework.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/squirrel-framework/issues"
  },
  "scripts": {
    "dev": "./dev.sh",
    "build": "rollup -c --environment BUILD:production",
    "build:dev": "rollup -c --environment BUILD:development",
    "build:prod": "rollup -c --environment BUILD:production",
    "build:analyze": "rollup -c --environment BUILD:production,ANALYZE:true",
    "build:cdn": "rollup -c scripts_utils/rollup.config.cdn.js",
    "build:cdn:watch": "rollup -c scripts_utils/rollup.config.cdn.js --watch",
    "build:npm": "rollup -c scripts_utils/rollup.config.npm.js",
    "build:all": "npm run build:cdn && npm run build:npm",
    "prepublishOnly": "npm run build:all",
    "scan:components": "node scripts_utils/scan-components.js",
    "prebuild": "npm run scan:components",
    "prebuild:cdn": "npm run scan:components",
    "prebuild:npm": "npm run scan:components",
    "cdn:upload": "echo 'TODO: Upload vers CDN (AWS S3, Cloudflare, etc.)'",
    "start:server": "cd server && node server.js",
    "serve": "python -m http.server 8000",
    "perf": "rollup -c --environment BUILD:development && python -m http.server 8000",
    "tauri": "tauri",
    "tauri:dev": "tauri dev"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@tauri-apps/cli": "^2.4.0",
    "pino-pretty": "^13.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-filesize": "^10.0.0",
    "ws": "^8.18.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/websocket": "^11.0.0",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "objection": "^3.1.5",
    "sequelize": "^6.37.1",
    "sqlite3": "^5.1.6",
    "wavesurfer.js": "^7.9.5"
  }
}
