# =============================================================================
# SQUIRREL FRAMEWORK - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git - it contains secrets!
# =============================================================================

# =============================================================================
# DATABASE (SQLite / libSQL / Turso)
# =============================================================================
# Local SQLite database path (relative to project root or absolute)
SQLITE_PATH=database_storage/adole.db

# Optional: libSQL/Turso cloud database (overrides local SQLite)
# LIBSQL_URL=libsql://your-database.turso.io
# LIBSQL_AUTH_TOKEN=your_auth_token_here

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_minimum_64_characters_long_for_security
COOKIE_SECRET=your_cookie_secret_here_minimum_32_characters

# Token expiration (default: 7 days in seconds)
JWT_EXPIRATION=604800

# =============================================================================
# SERVER IDENTITY (for official server verification)
# =============================================================================
# Server unique identifier (must match entry in trusted_keys.js for official servers)
SERVER_ID=squirrel-server-dev

# Paths to RSA key pair (generate with: npm run generate-keys)
# Private key: NEVER share, NEVER commit to Git
# Public key: Can be shared, included in trusted_keys.js for official servers
SERVER_PRIVATE_KEY_PATH=./server/certificates/server.key
SERVER_PUBLIC_KEY_PATH=./server/certificates/server.pub

# Server name displayed to clients
SERVER_NAME=Squirrel Development Server

# =============================================================================
# SMS PROVIDER (for OTP verification)
# =============================================================================
# Twilio configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Alternative: Use console logging for development (no real SMS sent)
# SMS_PROVIDER=console

# =============================================================================
# EMAIL PROVIDER (for email verification - optional)
# =============================================================================
# SMTP configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@example.com

# Alternative: Use console logging for development
# EMAIL_PROVIDER=console

# =============================================================================
# SECURITY OPTIONS
# =============================================================================
# Enable/disable server signature verification requirement
REQUIRE_SERVER_VERIFICATION=true

# Allow connections to non-official servers (set to false in production)
ALLOW_UNOFFICIAL_SERVERS=true

# Rate limiting (requests per minute per IP)
RATE_LIMIT_AUTH=10
RATE_LIMIT_GENERAL=100

# =============================================================================
# UPLOADS & FILE STORAGE
# =============================================================================
# Directory for file uploads (relative to project root or absolute path)
SQUIRREL_UPLOADS_DIR=src/assets/uploads

# Maximum upload size in bytes (default: 100MB)
MAX_UPLOAD_SIZE=104857600

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Fastify server port
PORT=3001

# Production mode (enables HTTPS, stricter security)
NODE_ENV=development

# HTTPS certificates (required in production)
# SSL_CERT_PATH=./certs/server.crt
# SSL_KEY_PATH=./certs/server.key

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Enable request logging
LOG_REQUESTS=true
