# Squirrel Framework - Environment Configuration

# Copy this file to .env and configure for your environment

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=production
PORT=3001
APP_URL=https://yourdomain.com

# ================================
# JWT SECURITY
# ================================
# IMPORTANT: Change this to a random, secure string in production
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# ================================
# DATABASE CONFIGURATION
# ================================
# SQLite (default)
DB_CLIENT=sqlite3
DB_FILENAME=./eDen.db

# PostgreSQL (for production)
# DB_CLIENT=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=squirrel_framework
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# ================================
# EMAIL CONFIGURATION (SMTP)
# ================================
# SMTP Server settings
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password

# Email settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Squirrel Framework

# ================================
# SECURITY SETTINGS
# ================================
# Rate limiting
AUTH_RATE_LIMIT_WINDOW=900000     # 15 minutes in ms
AUTH_RATE_LIMIT_MAX=5             # Max attempts per window
RESET_RATE_LIMIT_WINDOW=3600000   # 1 hour in ms  
RESET_RATE_LIMIT_MAX=3            # Max reset requests per window

# Account lockout
MAX_FAILED_ATTEMPTS=5             # Failed login attempts before lockout
LOCKOUT_DURATION=1800000          # 30 minutes in ms

# Password reset
RESET_TOKEN_EXPIRY=900000         # 15 minutes in ms

# ================================
# HTTPS/SSL CONFIGURATION
# ================================
# Let's Encrypt certificate paths (for NGINX)
SSL_CERT_PATH=/usr/local/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/usr/local/etc/letsencrypt/live/yourdomain.com/privkey.pem

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FILE=./logs/squirrel.log

# ================================
# CORS SETTINGS
# ================================
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true
